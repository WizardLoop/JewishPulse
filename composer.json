{
  "name": "wizardloop/jewishpulse",
  "description": "Your Jewish Bot for Times, Holiness, and Daily Connection.",
  "type": "project",
  "require": {
    "php": "^8.2",
    "danog/madelineproto": "^8.4",
    "amphp/http-client": "^5.3",
	"amphp/amp": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "friendsofphp/php-cs-fixer": "^3.50"
  },
  "autoload": {
    "psr-4": {
      "JewishPulse\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JewishPulse\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml",
    "lint": "phpcs --standard=phpcs.xml",
    "fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php"
  },
  "license": "AGPL-3.0-only",
  "authors": [
    {
      "name": "WizardLoop"
    }
  ]
}
